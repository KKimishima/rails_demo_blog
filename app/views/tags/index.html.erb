<div class="col-md-8 blog-main">
  <div class="blog-post">
    <h3 class="pb-3 mb-4 font-italic border-bottom">
      記事タグ一覧 <br>
    </h3>
    <table class="table">
      <thead class="thead-light">
      <tr>
        <th>tag</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td>
            <%= link_to tag.name, tag, class: "badge badge-secondary" %>
          </td>
          <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
          <td><%= link_to 'Destroy', tag, method: :delete, data: {confirm: '本当に削除しますか?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div><!-- /.blog-main-->
