<div class="col-md-8 blog-main">
  <div class="blog-post">
    <h3 class="pb-3 mb-4 font-italic border-bottom">
      記事タグ一覧 <br>
    </h3>
    <a href="<%= url_for controller: 'tags', action: 'new' %>" class="btn btn-outline-primary">Tagの作成</a>
    <table class="table">
      <thead class="thead-light">
      <tr>
        <th>tag</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @tags.each do |key, item| %>
        <tr>
          <td>
            <a href="<%= url_for controller: 'tags', action: 'show', id: key %>" class="badge badge-secondary">
              <%= item %>
            </a>
          </td>
          <td>
            <a href="<%= url_for controller: 'tags', action: 'edit', id: key %>">
              Edit
            </a>
          </td>
          <td>
            <%= link_to 'Destroy', "tags/#{key.to_s}", method: :delete, data: {confirm: '本当に削除しますか?'} %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div><!-- /.blog-main-->
